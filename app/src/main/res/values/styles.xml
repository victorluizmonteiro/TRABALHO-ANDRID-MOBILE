<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Criar um tema que herda de AppTheme, um tema padrÃ£o o android-->
    <style name="FullScreen" parent="AppTheme">
        <!-- Remove a barra do topo do app referente ao SDK -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Deixa a app em FullScreen , quando usamos android:, referenciamos uma propriedade da nossa activity -->
        <item name="android:windowFullscreen">true</item>
    </style>


</resources>
